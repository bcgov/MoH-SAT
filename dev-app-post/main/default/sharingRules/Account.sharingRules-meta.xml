<?xml version="1.0" encoding="UTF-8"?>
<SharingRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <sharingOwnerRules>
        <fullName>ESA_Account_ShareWithSAAdminAndInternalSubordinates</fullName>
        <accessLevel>Edit</accessLevel>
        <accountSettings>
            <caseAccessLevel>None</caseAccessLevel>
            <contactAccessLevel>Edit</contactAccessLevel>
            <opportunityAccessLevel>Edit</opportunityAccessLevel>
        </accountSettings>
        <description>This sharing rule enables account sharing within the internal role SAT role hierarchy</description>
        <label>ESA_Account_ShareWithSAAdminAndInternalSubordinates</label>
        <sharedTo>
            <roleAndSubordinatesInternal>SA_Admin</roleAndSubordinatesInternal>
        </sharedTo>
        <sharedFrom>
            <roleAndSubordinates>SA_Admin</roleAndSubordinates>
        </sharedFrom>
    </sharingOwnerRules>
    <sharingOwnerRules>
        <fullName>ESA_Account_ShareWithSAAdminAndSubordinates</fullName>
        <accessLevel>Edit</accessLevel>
        <accountSettings>
            <caseAccessLevel>None</caseAccessLevel>
            <contactAccessLevel>Edit</contactAccessLevel>
            <opportunityAccessLevel>Edit</opportunityAccessLevel>
        </accountSettings>
        <description>This sharing rule enables the account created by developer and below roles to be shared with SAT internal role hierarchy.</description>
        <label>ESA_Account_ShareWithSAAdminAndSubordinates</label>
        <sharedTo>
            <roleAndSubordinatesInternal>SA_Admin</roleAndSubordinatesInternal>
        </sharedTo>
        <sharedFrom>
            <roleAndSubordinates>Developer</roleAndSubordinates>
        </sharedFrom>
    </sharingOwnerRules>
</SharingRules>
