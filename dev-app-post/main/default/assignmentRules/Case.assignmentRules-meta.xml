<?xml version="1.0" encoding="UTF-8"?>
<AssignmentRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <assignmentRule>
        <fullName>EDRD Assignment Rule</fullName>
        <active>true</active>
        <ruleEntry>
            <assignedTo>EDRD_PSP_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>EDRD</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>notEqual</operation>
                <value>MOH Review</value>
            </criteriaItems>
            <template>unfiled$public/EDRD_Case_Assignment_Notification</template>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>EDRD_Ministry_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>EDRD</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>MOH Review</value>
            </criteriaItems>
            <template>unfiled$public/EDRD_Case_Assignment_Notification</template>
        </ruleEntry>
        <ruleEntry>
            <assignedTo>EDRD_PSP_Queue</assignedTo>
            <assignedToType>Queue</assignedToType>
            <booleanFilter>1 AND (2 OR 3)</booleanFilter>
            <criteriaItems>
                <field>Case.RecordTypeId</field>
                <operation>equals</operation>
                <value>EDRD</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>Funding Approved</value>
            </criteriaItems>
            <criteriaItems>
                <field>Case.Status</field>
                <operation>equals</operation>
                <value>Funding Denied</value>
            </criteriaItems>
            <template>unfiled$public/EDRD_Case_Assignment_Notification</template>
        </ruleEntry>
    </assignmentRule>
</AssignmentRules>
