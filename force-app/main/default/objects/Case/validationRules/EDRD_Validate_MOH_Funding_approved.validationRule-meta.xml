<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>EDRD_Validate_MOH_Funding_approved</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
EDRD_MOHFunding_Approved__c,
ISBLANK(EDRD_MOHFunding_Expiry_Date__c),
NOT(EDRD_MOHIndefinite_Funding__c)
)</errorConditionFormula>
    <errorDisplayField>EDRD_Funding_Expiry_Date__c</errorDisplayField>
    <errorMessage>If Funding is approved, please provide the Funding Expiry Date in the MOH section.</errorMessage>
</ValidationRule>
