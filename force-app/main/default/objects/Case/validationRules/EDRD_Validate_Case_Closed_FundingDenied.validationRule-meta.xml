<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>EDRD_Validate_Case_Closed_FundingDenied</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISCHANGED(Status),
ISPICKVAL(Status , &apos;Funding Denied&apos;),
ISBLANK(TEXT(EDRD_Case_closure_reasons__c))
)</errorConditionFormula>
    <errorDisplayField>EDRD_Case_closure_reasons__c</errorDisplayField>
    <errorMessage>If a case is closed as Funding Denied, please provide the reason in the Case closure reasons.</errorMessage>
</ValidationRule>
