<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>EDRD_Validate_Case_Closed_Other</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISCHANGED(Status),
ISPICKVAL(Status , &apos;Cancelled&apos;),
ISPICKVAL(EDRD_Case_closure_reasons__c, &apos;Other&apos;),
ISBLANK(EDRD_Notes__c)
)</errorConditionFormula>
    <errorMessage>If a case is closed as Cancelled and Case Closure Reason is Other, please provide the reason in the Notes.</errorMessage>
</ValidationRule>
